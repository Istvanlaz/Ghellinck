<div class="product_show_cont">

  <div class="product_grid">

    <% @category.products.each do |product| %>
      <%= link_to category_product_path(@category, product) do %>
        <div class="product_card">
          <div class="product_show_img">
            <%= cl_image_tag product.image.key %>
            <div class="hover_dark"></div>
            <div class="hover_txt">
              <div class="hover_info">
                <%= product.name %>
              </div>
              <div class="hover_info">
                <%= product.description %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>

</div>
